name:                yahoo-finance-api
version:             0.1.0.0
synopsis:            Read quotes from Yahoo Finance API
description:         Please see README.md
homepage:            https://github.com/cdepillabout/yahoo-finance-api
license:             BSD3
license-file:        LICENSE
author:              Dennis Gosnell
maintainer:          cdep.illabout@gmail.com
copyright:           2016 Dennis Gosnell
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Web.Yahoo.Finance.API.JSON
  build-depends:       base >= 4.7 && < 5
                     , http-api-data >= 0.2
                     , http-client >= 0.4
                     , mtl >= 2.2
                     , servant >= 0.7
                     , servant-client >= 0.7
                     , text >= 1.2
                     , transformers >= 0.4
  default-language:    Haskell2010

test-suite yahoo-finance-api-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , yahoo-finance-api
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/cdepillabout/yahoo-finance-api
